# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ironsnake
POSTGRES_PORT=5432
POSTGRES_HOST=postgres
POSTGRES_SSLMODE=disable

# Container Names
POSTGRES_CONTAINER_NAME=ironsnake-postgres
CORE_CONTAINER_NAME=ironsnake-core
FRONT_CONTAINER_NAME=ironsnake-front
PROXY_CONTAINER_NAME=ironsnake-proxy

# Application Ports
CORE_PORT=8080
FRONT_PORT=3000
PROXY_PORT=5000

# Frontend Configuration
ORIGIN=http://localhost:5000

# LDAP Configuration
LDAP_URL=ldap://openldap:389
LDAP_BASE_DN=dc=ironsnake,dc=local
LDAP_BIND_DN=cn=admin,dc=ironsnake,dc=local
LDAP_BIND_PASSWORD=admin
LDAP_USER_FILTER=(uid=%s)
LDAP_USER_BASE_DN=ou=users,dc=ironsnake,dc=local
LDAP_ORGANISATION=IronSnake
LDAP_DOMAIN=ironsnake.local
LDAP_ADMIN_PASSWORD=admin
LDAP_PORT=389
LDAPS_PORT=636
LDAP_CONTAINER_NAME=ironsnake-openldap
PHPLDAPADMIN_PORT=6443
PHPLDAPADMIN_CONTAINER_NAME=ironsnake-phpldapadmin

# JWT Configuration
JWT_SECRET=<generate-with-openssl-rand-base64-32>
JWT_EXPIRATION_HOURS=24